<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expression"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="10dp"
                android:textSize="32sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:padding="10dp"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/seven"
                        style="@style/calc_num_button"
                        android:text="7" />

                    <Button
                        android:id="@+id/eight"
                        style="@style/calc_num_button"
                        android:text="8" />

                    <Button
                        android:id="@+id/nine"
                        style="@style/calc_num_button"
                        android:text="9" />

                    <Button
                        android:id="@+id/division"
                        style="@style/calc_action_button"
                        android:text="/" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/four"
                        style="@style/calc_num_button"
                        android:text="4" />

                    <Button
                        android:id="@+id/five"
                        style="@style/calc_num_button"
                        android:text="5" />

                    <Button
                        android:id="@+id/six"
                        style="@style/calc_num_button"
                        android:text="6" />

                    <Button
                        android:id="@+id/multiply"
                        style="@style/calc_action_button"
                        android:text="x" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/one"
                        style="@style/calc_num_button"
                        android:text="1" />

                    <Button
                        android:id="@+id/two"
                        style="@style/calc_num_button"
                        android:text="2" />

                    <Button
                        android:id="@+id/three"
                        style="@style/calc_num_button"
                        android:text="3" />

                    <Button
                        android:id="@+id/minus"
                        style="@style/calc_action_button"
                        android:text="-" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/zero"
                        style="@style/calc_num_button"
                        android:text="0" />

                    <Button
                        android:id="@+id/point"
                        style="@style/calc_num_button"
                        android:text="." />

                    <View
                        style="@style/calc_num_button"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/plus"
                        style="@style/calc_action_button"
                        android:text="+" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        style="@style/calc_action_button"
                        android:layout_width="match_parent"
                        android:id="@+id/delete"
                        android:text="del" />

                    <Button
                        style="@style/calc_action_button"
                        android:layout_width="match_parent"
                        android:id="@+id/clear"
                        android:text="C" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/equals"
                        style="@style/calc_action_button"
                        android:text="=" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>